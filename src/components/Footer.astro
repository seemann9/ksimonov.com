---
import { metaData, socialLinks } from "../config";
import { Icon } from "astro-icon/components";

const YEAR = new Date().getFullYear();

const socialIcons = [
  { href: socialLinks.dblp, icon: "simple-icons:dblp" },
  { href: socialLinks.google_scholar, icon: "fa6-brands:google-scholar" },
  { href: socialLinks.github, icon: "fa6-brands:github" },
  { href: socialLinks.email, icon: "tabler:mail-filled" },
];
---

<small class="block lg:mt-24 mt-16 text-[#1C1C1C] dark:text-[#D4D4D4]">
  <time>Â© {YEAR}</time>{" "}
  <a
    class="no-underline"
    href="https://github.com/seemann9/seemann9.github.io"
    target="_blank"
    rel="noopener noreferrer">
    {metaData.title}
  </a>
  <div
    class="flex text-lg gap-3.5 float-right transition-opacity duration-300 hover:opacity-90">
    {
      socialIcons.map((link) => (
        <a href={link.href} target="_blank" rel="noopener noreferrer">
          <Icon name={link.icon} />
        </a>
      ))
    }
  </div>
</small>

<style>
  @media screen and (max-width: 480px) {
    article {
      padding-top: 2rem;
      padding-bottom: 4rem;
    }
  }
</style>
